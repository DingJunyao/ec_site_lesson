  <script src="/js/setCookie.js"></script>
  <script src="/js/sha256.js"></script>
  <script src="/js/search.js"></script>
  <script src="/js/global.js"></script>
  <% if(user == ''){ %>
    <script src="/js/index.js"></script>
  <% } %>
</html>
